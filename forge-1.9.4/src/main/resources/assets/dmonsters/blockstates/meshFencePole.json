{
    "multipart": [
	    {   "apply": { "model": "dmonsters:mesh_fence_pole" }},
        {   "when": { "north": "true" },
            "apply": { "model": "dmonsters:mesh_fence", "uvlock": false }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "dmonsters:mesh_fence", "y": 90, "uvlock": false }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "dmonsters:mesh_fence", "y": 180, "uvlock": false }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "dmonsters:mesh_fence", "y": 270, "uvlock": false }
        }
    ]
}